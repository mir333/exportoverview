<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="ExportOverviewPU" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>cz.ligas.exportoverview.db.Clients</class>
    <class>cz.ligas.exportoverview.db.Delivery</class>
    <class>cz.ligas.exportoverview.db.DeliveryLine</class>
    <class>cz.ligas.exportoverview.db.Document</class>
    <class>cz.ligas.exportoverview.db.DocumentLine</class>
    <class>cz.ligas.exportoverview.db.ExportLine</class>
    <class>cz.ligas.exportoverview.db.Invoice</class>
    <class>cz.ligas.exportoverview.db.InvoiceLine</class>
    <class>cz.ligas.exportoverview.db.ProductCategory</class>
    <class>cz.ligas.exportoverview.db.Products</class>
    <class>cz.ligas.exportoverview.db.WarehouseItem</class>
    <properties>
      <property name="toplink.jdbc.user" value="app"/>
      <property name="toplink.jdbc.password" value="app"/>
      <property name="toplink.jdbc.url" value="jdbc:derby://localhost:1527/sample"/>
      <property name="toplink.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="toplink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
